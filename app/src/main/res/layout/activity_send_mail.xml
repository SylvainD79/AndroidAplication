<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miage.fr.gestionprojet.vues.SendMailActivity">

    <EditText
        android:hint="@string/mail_adress_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mail_destinataire"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/mail_destinataire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_mail"
        android:text="@string/send_mail_button"/>

</android.support.constraint.ConstraintLayout>
